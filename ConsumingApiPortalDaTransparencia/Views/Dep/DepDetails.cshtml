@model ConsumingApiPortalDaTransparencia.Models.DeputadosInfoDetalhada

@{
    ViewBag.Title = "DepDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Resumo detalhado dos deputados</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<p>
    @Html.ActionLink("Voltar", null, null, null, new { @class = "btn btn-primary btn-large", href = Request.UrlReferrer })
</p>

<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<div class="container bootstrap snippets bootdey">
    <div class="col-xs-12 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-8">
                        <h2 class="text-dark"><b><span class="glyphicon glyphicon-user"></span>@Model.dados.nomeCivil</b></h2>
                        <p><strong><span class="glyphicon glyphicon-ok-circle"></span>Sobre: </strong>Deputado Federal pelo Partido @Model.dados.ultimoStatus.siglaPartido-@Model.dados.ultimoStatus.siglaUf </p>
                        <p><strong><span class="glyphicon glyphicon-ok-circle"></span>Naturalidade: </strong>@Model.dados.municipioNascimento-@Model.dados.ufNascimento</p>
                        <p><strong><span class="glyphicon glyphicon-ok-circle"></span>Nascimento: </strong>@Model.dados.dataNascimento (idade...)</p>
                        <p><strong><span class="glyphicon glyphicon-ok-circle"></span>Situação: </strong>Em @Model.dados.ultimoStatus.situacao.ToLower(), eleito no ano de @Model.dados.ultimoStatus.data (@Model.dados.ultimoStatus.condicaoEleitoral)</p>
                        <p><strong><span class="glyphicon glyphicon-ok-circle"></span>Escolaridade: </strong>@Model.dados.escolaridade</p>
                        
                    </div><!--/col-->
                    <div class="col-xs-12 col-sm-4 text-center">
                        <img src=@Model.dados.ultimoStatus.urlFoto alt="" class="center-block img-circle img-responsive profile-img">
                    </div><!--/col-->
                </div><!--/row-->
            </div>
        </div>
    </div>
</div>

<div class="container bootstrap snippets bootdey">
    <div class="col-xs-12 col-sm-12">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="card text-center">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#">Active</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Link</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" href="#">Disabled</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Special title treatment</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

